{
    "src_folders": [
        "tests/src/index.js"
    ],
    "output_folder": "tests/reports",
    "custom_commands_path": "",
    "custom_assertions_path": "",
    "page_objects_path": "",
    "globals_path": "",
    "selenium": {
        "start_process": true,
        "server_path": "tests/selenium-server-standalone-3.8.1.jar",
        "log_path": "./tests/reports",
        "host": "127.0.0.1",
        "port": 4444,
        "cli_args": {
            "webdriver.chrome.driver": "tests/chromedriver",
            "webdriver.gecko.driver": "tests/geckodriver"
        }
    },
    "test_settings": {
        "default": {
            "launch_url": "http://localhost:3000",
            "selenium_port": 4444,
            "selenium_host": "localhost",
            "silent": true,
            "screenshots": {
                "enabled": false,
                "path": ""
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "chromeOptions": {
                    "args": [
                        "--incognito",
                        "window-size=1280,800"
                    ]
                },
                "marionette": true,
                "javascriptEnabled": true,
                "acceptSslCerts": true
            },
            "globals": {
                "abortOnAssertionFailure": false
            }
        }
    }
}
